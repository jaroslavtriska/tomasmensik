---
interface Props {
  title: string;
  slug: string;
  location: string;
  price: string;
  type: string;
  image: string;
  area?: string;
  sold?: boolean;
}

const { title, slug, location, price, type, image, area, sold = false } = Astro.props;
---

<a href={`/nemovitosti/${slug}`} class="group block bg-white overflow-hidden shadow-sm hover:shadow-lg transition-shadow duration-300">
  <!-- Image -->
  <div class="relative aspect-[4/3] overflow-hidden">
    <img 
      src={image} 
      alt={title}
      class="w-full h-full object-cover img-hover"
      loading="lazy"
    />
    <!-- Type Badge -->
    <span class:list={[
      'absolute top-4 left-4 px-3 py-1 text-xs font-medium tracking-wide uppercase',
      sold 
        ? 'bg-sand-700 text-white' 
        : 'bg-accent-700 text-white'
    ]}>
      {sold ? 'Prodáno' : type}
    </span>
  </div>

  <!-- Content -->
  <div class="p-6">
    <div class="flex items-center gap-2 text-sm text-sand-500 mb-2">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      <span>{location}</span>
      {area && (
        <>
          <span class="text-sand-300">•</span>
          <span>{area}</span>
        </>
      )}
    </div>
    
    <h3 class="font-heading text-xl text-sand-900 group-hover:text-accent-700 transition-colors mb-4">
      {title}
    </h3>

    <div class="flex items-center justify-between">
      <span class="font-heading text-2xl text-accent-700 font-semibold">
        {price}
      </span>
      <span class="text-sand-400 group-hover:text-accent-700 group-hover:translate-x-1 transition-all">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </span>
    </div>
  </div>
</a>
